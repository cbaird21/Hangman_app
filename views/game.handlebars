<header id="header">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <!-- return to landing page -->
      <a class="navbar-brand" href="http://localhost:3001" target="_blank"><img
          src="/assets/haticon.png"
        /></a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarText"
        aria-controls="navbarText"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <!-- view high scores on top left and timer on top right -->
            <a
              class="nav-link active"
              id="viewHighScore"
              aria-current="page"
              href="http://localhost:3001/highscores"
              target="_blank"
            >View High Scores</a>
          </li>
          <li class="nav-item">
            <!-- game page only visible when logged in -->
            <a
              class="nav-link"
              href="http://localhost:3001/api/users/logout"
            >Logout</a>
          </li>
        </ul>
        <span class="navbar-text timer">Timer</span>
        <span class="navbar-text">
          Logged in user name
        </span>
      </div>
    </div>
  </nav>

  <!-- extra: timer not visible until quiz starts -->
  <p id="seconds"></p>
</header>
<section class="container my-5">
  <!-- Use row class to create row in the container -->
  <div class="row">
    <!-- Use col-* classes for different column sizes on different screens -->
    <div class="col-12 col-md-8 col-lg-9 text-center">
      <h1>Hangman</h1>
      <h2 id="current-word" class="hide">_ _ _ _ _ _ _ _ </h2>
      <img src="/assets/kermit.png" />
      <table class="table">
        <tbody id="letterCardsInATable"></tbody>
      </table>
      <div>
        <button type="button" class="btn btn-outline-success start-btn">Play
          Game</button>
      </div>
      <div id="highScores"></div>
      <div id="resetBox">
        <button
          type="button"
          class="btn btn-outline-success reset-btn"
        >Reset</button>
      </div>
    </div>

    <div class="col-12 col-md-4 col-lg-3">
      <h2>Chat here, Partner</h2>
      <ul>
        <li>Here is where the weavy will live</li>
        <li>Side screen for chat program</li>
        <li>etc</li>
      </ul>
    </div>
  </div>
</section>
